<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="5dp"
    tools:context=".Add">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:placeholderImage="@drawable/placeholder_camera"
                android:layout_weight="12.28" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.5dp"
                android:layout_marginTop="5dp">


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/input_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_marginEnd="2dp"
                    android:elegantTextHeight="false"
                    android:gravity="top"
                    android:hint="Name Of The Place"
                    android:minHeight="100dp"
                    app:met_baseColor="#444444"
                    app:met_floatingLabel="normal"
                    app:met_hideUnderline="true"
                    app:met_maxCharacters="140"
                    app:met_primaryColor="#000000" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.5dp"
                android:layout_marginTop="2.5dp">


                <com.rengwuxian.materialedittext.MaterialEditText

                    android:id="@+id/input_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:elegantTextHeight="false"
                    android:gravity="top"
                    android:hint="Description"
                    android:minHeight="100dp"
                    app:met_baseColor="#444444"
                    app:met_floatingLabel="normal"
                    app:met_hideUnderline="true"
                    app:met_maxCharacters="500"
                    app:met_primaryColor="#444444" />

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:text="Add Place"
                android:background="@color/colorPrimary" />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>
